{
  "name": "yarn-catalog-plugin-preview",
  "displayName": "yarn Catalog preview",
  "description": "Preview catalog version of yarn",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.yarnrc.yaml",
    "workspaceContains:catalogs.yml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "yarn catalog preview",
        "title": "Toggle",
        "command": "yarnCatalogPreview.toggle"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "pnpmCatalogLens.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable inlay hints"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  }
}
